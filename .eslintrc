{
    "env": {
        "browser": true,
        "es2021": true
    },
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["warn", "always"],
        "quotes": ["warn", "double"],
        "object-curly-spacing": ["warn", "always"],
        "indent": ["error", "tab", { "SwitchCase": 1 }],
        "space-before-blocks": ["warn", "always"],
        "arrow-parens": ["warn", "as-needed"],
        "comma-dangle": ["warn", {
            "arrays": "never",
            "objects": "always",
            "imports": "never",
            "exports": "never",
            "functions": "never"
        }],
        "brace-style": ["error", "allman", { "allowSingleLine": true }]
    }
}